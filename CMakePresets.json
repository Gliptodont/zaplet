{
    "version": 3,
    "configurePresets": [
        {
            "name": "Debug-Linux",
            "binaryDir": "${sourceDir}/build/debug",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            }
        },
        {
            "name": "Release-Linux",
            "binaryDir": "${sourceDir}/build/release",
            "generator": "Unix Makefiles",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            }
        },
        {
            "name": "Debug-Windows",
            "binaryDir": "${sourceDir}/build/debug",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_AR": "lib",
                "CMAKE_RANLIB": "lib",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreadedDebug"
            }
        },
        {
            "name": "Release-Windows",
            "binaryDir": "${sourceDir}/build/release",
            "generator": "Visual Studio 17 2022",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_AR": "lib",
                "CMAKE_RANLIB": "lib",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
            }
        },
        {
            "name": "Debug-macOS",
            "binaryDir": "${sourceDir}/build/debug",
            "generator": "Xcode",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        },
        {
            "name": "Release-macOS",
            "binaryDir": "${sourceDir}/build/release",
            "generator": "Xcode",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_POLICY_DEFAULT_CMP0077": "NEW",
                "CMAKE_POLICY_VERSION": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-osx"
            }
        }
    ]
}

